    <script>
        // Data Management
        let sprints = JSON.parse(localStorage.getItem('tf_sprints')) || [];
        let meetings = JSON.parse(localStorage.getItem('tf_meetings')) || [];

        // Initialize with default data if empty
        if (sprints.length === 0) {
            sprints = [
                { id: 1, status: 'active', name: 'Capeye Workflow System', progress: 65 },
                { id: 2, status: 'planning', name: 'Agent Intelligence Platform', progress: 15 },
                { id: 3, status: 'blocked', name: 'Mobile App Deployment', progress: 80 }
            ];
            localStorage.setItem('tf_sprints', JSON.stringify(sprints));
        }

        // Save functions
        function saveSprint(id) {
            const card = document.querySelector(`[data-sprint-id="${id}"]`);
            const sprint = sprints.find(s => s.id === id);
            if (sprint && card) {
                sprint.name = card.querySelector('h3').innerText;
                sprint.description = card.querySelector('p').innerText;
                localStorage.setItem('tf_sprints', JSON.stringify(sprints));
                showNotification('Sprint saved', 'success');
            }
        }

        function saveMeeting(id) {
            const card = document.querySelector(`[data-meeting-id="${id}"]`);
            const meeting = meetings.find(m => m.id === id);
            if (meeting && card) {
                meeting.title = card.querySelector('h4').innerText;
                meeting.notes = card.querySelector('ul').innerText;
                localStorage.setItem('tf_meetings', JSON.stringify(meetings));
                showNotification('Meeting notes saved', 'success');
            }
        }

        function addNewSprint() {
            const id = Date.now();
            const newSprint = {
                id: id,
                status: 'planning',
                name: 'New Sprint',
                description: 'Click to edit description',
                progress: 0
            };
            sprints.push(newSprint);
            localStorage.setItem('tf_sprints', JSON.stringify(sprints));
            location.reload();
        }

        function addNewMeeting() {
            const id = Date.now();
            const newMeeting = {
                id: id,
                type: 'daily',
                title: 'New Meeting',
                notes: '• Add notes here',
                date: new Date().toLocaleDateString()
            };
            meetings.push(newMeeting);
            localStorage.setItem('tf_meetings', JSON.stringify(meetings));
            location.reload();
        }

        function deleteSprint(id) {
            if (confirm('Delete this sprint?')) {
                sprints = sprints.filter(s => s.id !== id);
                localStorage.setItem('tf_sprints', JSON.stringify(sprints));
                document.querySelector(`[data-sprint-id="${id}"]`).remove();
                updateStats();
            }
        }

        function deleteMeeting(id) {
            if (confirm('Delete this meeting?')) {
                meetings = meetings.filter(m => m.id !== id);
                localStorage.setItem('tf_meetings', JSON.stringify(meetings));
                document.querySelector(`[data-meeting-id="${id}"]`).remove();
            }
        }

        function filterMeetings(type) {
            const items = document.querySelectorAll('#meetingsList > div');
            items.forEach(item => {
                if (type === 'all' || item.dataset.type === type) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function updateStats() {
            document.getElementById('activeSprints').textContent = sprints.filter(s => s.status === 'active').length;
        }

        function exportData() {
            const data = {
                sprints: sprints,
                meetings: meetings,
                exportDate: new Date().toISOString()
            };
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `tripfactory-sprints-${new Date().toISOString().split('T')[0]}.json`;
            a.click();
            showNotification('Data exported successfully', 'success');
        }

        function showNotification(message, type) {
            // Simple notification implementation
            const div = document.createElement('div');
            div.className = `fixed bottom-4 right-4 px-6 py-3 rounded-lg text-white ${type === 'success' ? 'bg-green-600' : 'bg-blue-600'} shadow-lg z-50`;
            div.textContent = message;
            document.body.appendChild(div);
            setTimeout(() => div.remove(), 3000);
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
        });
    </script>
</body>
</html>
